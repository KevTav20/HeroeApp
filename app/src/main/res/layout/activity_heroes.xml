<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.HeroesActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"
        />
    <View
        android:id="@+id/dinamic_backgound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dc_background"
        android:alpha="0.7"
        />


    <TextView
        android:id="@+id/welcome_teamTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienvenido a, marvel"
        android:textSize="34sp"
        style="@style/font5"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideV6"
        app:layout_constraintEnd_toStartOf="@id/guideV7"
        app:layout_constraintVertical_bias="0.05"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/characters_recycleview"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/titulo_heroesTV"
        app:layout_constraintEnd_toStartOf="@id/guideV7"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toEndOf="@id/guideV6"
        app:layout_constraintTop_toBottomOf="@+id/welcome_teamTV" />

    <TextView
        android:id="@+id/titulo_heroesTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/characters_recycleview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideV6"
        app:layout_constraintEnd_toStartOf="@id/guideV7"
        app:layout_constraintVertical_bias="0.05"
        android:gravity="center_horizontal"
        android:text="Merchandising"
        android:textSize="44sp"
        android:textColor="@color/white"
        style="@style/font3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>